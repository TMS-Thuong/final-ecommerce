{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "dist/src",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app": [
        "src"
      ],
      "@app/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@plugins/*": [
        "src/plugins/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@decorator/*": [
        "src/decorator/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}